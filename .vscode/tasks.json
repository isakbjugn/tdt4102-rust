{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "clang++ -std=c++20 -g -Wall -Wextra main.cpp -o main",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "build & run",
      "type": "shell",
      "command": "clang++ -std=c++20 -Wall -Wextra main.cpp -o main && ./main",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
