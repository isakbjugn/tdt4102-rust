{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "clang++ -std=c++20 -g -Wall -Wextra ${file} -o ${fileDirname}/${fileBasenameNoExtension}",
      "group": "build"
    },
    {
      "label": "build & run",
      "type": "shell",
      "command": "clang++ -std=c++20 -Wall -Wextra ${file} -o ${fileDirname}/${fileBasenameNoExtension} && ${fileDirname}/${fileBasenameNoExtension}",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo build",
      "options": {
        "cwd": "${workspaceFolder}/rust"
      },
      "group": "build"
    },
    {
      "label": "cargo run",
      "type": "shell",
      "command": "cargo run",
      "options": {
        "cwd": "${workspaceFolder}/rust"
      },
      "group": "build"
    }
  ]
}
